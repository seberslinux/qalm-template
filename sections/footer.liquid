{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Columns"
    },
    {
      "type": "text",
      "id": "column1_heading",
      "label": "Column 1 Heading",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "column1_menu",
      "label": "Column 1 Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "column2_heading",
      "label": "Column 2 Heading",
      "default": "About"
    },
    {
      "type": "link_list",
      "id": "column2_menu",
      "label": "Column 2 Menu"
    },
    {
      "type": "text",
      "id": "column3_heading",
      "label": "Column 3 Heading",
      "default": "Customer Service"
    },
    {
      "type": "link_list",
      "id": "column3_menu",
      "label": "Column 3 Menu"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "text",
      "id": "social_heading",
      "label": "Social Media Heading",
      "default": "Connect"
    },
    {
      "type": "textarea",
      "id": "social_text",
      "label": "Social Media Text",
      "default": "Follow us on social media for sensory-friendly tips and updates."
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "pinterest_link",
      "label": "Pinterest URL"
    },
    {
      "type": "header",
      "content": "Legal"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All rights reserved."
    },
    {
      "type": "url",
      "id": "privacy_policy_link",
      "label": "Privacy Policy URL"
    },
    {
      "type": "url",
      "id": "terms_link",
      "label": "Terms of Service URL"
    },
    {
      "type": "url",
      "id": "accessibility_link",
      "label": "Accessibility URL"
    }
  ]
}
{% endschema %}

<footer class="bg-white border-t border-gray-100 pt-16 pb-8 px-4 md:px-6">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <!-- Column 1 -->
      <div>
        <h3 class="text-lg font-medium mb-4">{{ section.settings.column1_heading }}</h3>
        {% if section.settings.column1_menu != blank %}
          <ul class="space-y-2">
            {% for link in section.settings.column1_menu.links %}
              <li>
                <a href="{{ link.url }}" class="text-gray-600 hover:text-black transition-colors">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Column 2 -->
      <div>
        <h3 class="text-lg font-medium mb-4">{{ section.settings.column2_heading }}</h3>
        {% if section.settings.column2_menu != blank %}
          <ul class="space-y-2">
            {% for link in section.settings.column2_menu.links %}
              <li>
                <a href="{{ link.url }}" class="text-gray-600 hover:text-black transition-colors">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Column 3 -->
      <div>
        <h3 class="text-lg font-medium mb-4">{{ section.settings.column3_heading }}</h3>
        {% if section.settings.column3_menu != blank %}
          <ul class="space-y-2">
            {% for link in section.settings.column3_menu.links %}
              <li>
                <a href="{{ link.url }}" class="text-gray-600 hover:text-black transition-colors">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Social Media -->
      <div>
        <h3 class="text-lg font-medium mb-4">{{ section.settings.social_heading }}</h3>
        <p class="text-gray-600 mb-4">
          {{ section.settings.social_text }}
        </p>
        <div class="flex space-x-4">
          {% if section.settings.instagram_link != blank %}
            <a href="{{ section.settings.instagram_link }}" 
               class="text-gray-600 hover:text-black transition-colors" 
               aria-label="Instagram" 
               target="_blank" 
               rel="noopener">
              {% render 'icon-instagram' %}
            </a>
          {% endif %}
          {% if section.settings.facebook_link != blank %}
            <a href="{{ section.settings.facebook_link }}" 
               class="text-gray-600 hover:text-black transition-colors" 
               aria-label="Facebook" 
               target="_blank" 
               rel="noopener">
              {% render 'icon-facebook' %}
            </a>
          {% endif %}
          {% if section.settings.pinterest_link != blank %}
            <a href="{{ section.settings.pinterest_link }}" 
               class="text-gray-600 hover:text-black transition-colors" 
               aria-label="Pinterest" 
               target="_blank" 
               rel="noopener">
              {% render 'icon-pinterest' %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="border-t border-gray-100 pt-8 flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <p class="text-sm text-gray-500">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
        </p>
      </div>
      <div class="flex space-x-6">
        {% if section.settings.privacy_policy_link != blank %}
          <a href="{{ section.settings.privacy_policy_link }}" 
             class="text-sm text-gray-500 hover:text-black transition-colors">
            Privacy Policy
          </a>
        {% endif %}
        {% if section.settings.terms_link != blank %}
          <a href="{{ section.settings.terms_link }}" 
             class="text-sm text-gray-500 hover:text-black transition-colors">
            Terms of Service
          </a>
        {% endif %}
        {% if section.settings.accessibility_link != blank %}
          <a href="{{ section.settings.accessibility_link }}" 
             class="text-sm text-gray-500 hover:text-black transition-colors">
            Accessibility
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>