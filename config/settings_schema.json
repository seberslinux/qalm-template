[
  {
    "name": "theme_info",
    "theme_name": "Sense and Style",
    "theme_version": "1.0.0",
    "theme_author": "Sensory Brand",
    "theme_documentation_url": "https://github.com/seberslinux/qalm-template/blob/qalm-shopify/README.md",
    "theme_support_url": "https://github.com/seberslinux/qalm-template/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#6B73A1"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#9BB5A8"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#D4A574"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#2C3E50"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background color",
        "default": "#FFFFFF"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Heading font",
        "default": "inter_n4"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body font",
        "default": "inter_n4"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Page Layout"
      },
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 10,
        "unit": "px",
        "label": "Page width",
        "default": 1200
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Spacing between sections",
        "default": 0
      }
    ]
  },
  {
    "name": "Product Cards",
    "settings": [
      {
        "type": "header",
        "content": "Product Card Settings"
      },
      {
        "type": "range",
        "id": "card_image_padding",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Image padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "card_corner_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Corner radius",
        "default": 0
      },
      {
        "type": "select",
        "id": "card_text_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Text alignment"
      }
    ]
  },
  {
    "name": "Accessibility",
    "settings": [
      {
        "type": "header",
        "content": "Accessibility Settings"
      },
      {
        "type": "checkbox",
        "id": "reduced_motion",
        "label": "Respect reduced motion preferences",
        "default": true,
        "info": "Automatically reduces animations for users who prefer reduced motion"
      },
      {
        "type": "checkbox",
        "id": "high_contrast",
        "label": "High contrast mode",
        "default": false,
        "info": "Increases contrast for better visibility"
      },
      {
        "type": "checkbox",
        "id": "focus_indicators",
        "label": "Enhanced focus indicators",
        "default": true,
        "info": "Shows clear focus indicators for keyboard navigation"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png recommended"
      }
    ]
  }
]